			FROM BZENT
			WHERE BZENT_TYPE = 'BZ_F01'
		 </selectKey>
		INSERT INTO FRCS(FRCS_NO, FRCS_TYPE, WARN_CNT, OPBIZ_YMD)
		VALUES (#{frcsNo}, 'FRS01', 0, #{opbizYmd})
	</insert>
	
	<select id="selectMaxFrcsNo" resultType="String">
		SELECT MAX(FRCS_NO)
		FROM FRCS
	</select>
