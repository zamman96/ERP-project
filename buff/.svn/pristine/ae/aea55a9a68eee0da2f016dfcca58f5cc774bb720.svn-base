}
.scm-dtl{
	display: flex;
	flex-direction: column;
	gap:var(--gap--s);
}
.scm-dtl2{
	display: flex;
	gap:var(--gap--s);
}
.scm-num{
	font-size: 1.5rem;
    font-weight: 900;
}
.scm-icon{
    display: flex;
    justify-content: center;
    align-items: center;
}
.icon-cnt{ /*아이콘*/
	font-size: 46px;
	color: var(--blue--8);
}
.scm-title{
	font-size: 0.9rem;
	color: var(--gray--8);
}
.scm-title2{
	font-size: 1.0rem;
	color: var(--gray--8);
	position: relative;
	top: 4px;
}
/* scm 끝 */


/* cnt 시작 */
.cnt-wrap{
	display: flex;
	gap: var(--gap--m);
	flex-direction: row;
}
.cnt-cont{
	cursor: pointer;
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
    background-color: #fff;
    border-radius: 10px;
    overflow: hidden;
    padding: var(--pd--m);
    
    gap: var(--gap--s);
    display: flex;
    flex-direction: column;
    width: 130px;
}
.cnt-cont:hover{
    box-shadow: 0 0 10px var(--gray--2),
                0 0 10px var(--gray--2),
                0 0 10px var(--gray--2),
                0 0 10px var(--gray--2);
}
.cnt-num{
	font-size: 1.5rem;
    font-weight: 900;
}
.cnt-icon{
	background: var(--green--4);
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.icon-cnt{ /*아이콘*/
	font-size: 30px;
	color: white;
}
.cnt-title{
	font-size: 0.9rem;
	color: var(--gray--4);
}
/* cnt 끝 */


/* 탭으로 전환 */
.main-container {
    flex-grow: 1;
}
.main-wrapper {
	display: flex;
	height: 100%;
	flex-direction: column;
}
.indicator {
	border-right: 1px solid var(--grey);
	gap: var(--gap--s);
    display: flex;
    padding-left: var(--gap--m);
}
.indicator li {
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
	display: flex;
	padding: var(--pd--s);
	cursor: pointer;
	font-size: .875rem;
	color: var(--black);
	border-right: 3px solid transparent;
	border-radius: var(--radius--m) var(--radius--m) 0 0;
	width: 70px;
    justify-content: center;
    background: white;
}
.indicator li i {
	font-size: 1rem;
}
.indicator li:hover {
	background: var(--gray--3);
}
.indicator li.active {
	color: var(--blue--0);
	background: var(--blue--8);
}
.main-content {
	padding: 1.5rem 2rem;
	flex-grow: 1;
/* 	max-height: 320px; */
	overflow: auto;
}
.main-content li {
	display: none;
   max-height: 447px;
}
.main-content li.active {
	display: block;
	width: -webkit-fill-available;
}

/* error */
.table-error tr td.error-info{
	height: 300px;
}

/* 캘린더 */
.fc .fc-toolbar.fc-header-toolbar {
    margin-bottom: 0;
    padding: var(--pd--s);
}

.fc-toolbar-title{
	font-size : 1rem !important;	
}
/* today */
.fc .fc-button-primary{
	width: 50px !important;
    font-size: 0.7rem !important;
}
.fc .fc-daygrid-day-number, .fc .fc-col-header-cell-cushion {
	color: var(--blue--8);
}
.fc-button-primary{
	width: 30px !important;
    height: 30px !important;
    padding: 0 !important;   /* 기본 패딩 제거 */
    display: flex !important; /* 가운데 정렬을 위한 flex 설정 */
    align-items: center !important; /* 수직 가운데 정렬 */
    justify-content: center !important; /* 수평 가운데 정렬 */	
}
.fc-toolbar-chunk{
	display: flex !important;
}
.fc-icon{
	color: white !important;
    font-size: 16px !important;
    width: 100% !important;    
    height: auto !important;    
}
.fc-event {
    background-color: var(--green--3) !important;  /* 이벤트 배경 색상 */
    border-color: var(--green--3) !important;      /* 이벤트 테두리 색상 */
    color: var(--blue--8) !important;             /* 이벤트 글자 색상 */
}

/* 일요일 날짜 빨간색 */
.fc-day-sun a {
  color: var(--red--5) !important;
  text-decoration: none;
}

/* 토요일 날짜 파란색 */
.fc-day-sat a {
  color: var(--blue--5) !important;
  text-decoration: none;
}
#calendar {
    max-width: 100%;
    width: 600px; /* 기본 크기 600px */
    margin: 0 auto;
}

@media (max-width: 768px) {
    #calendar {
        width: 100%; /* 작은 화면에서는 전체 너비로 설정 */
    }
}