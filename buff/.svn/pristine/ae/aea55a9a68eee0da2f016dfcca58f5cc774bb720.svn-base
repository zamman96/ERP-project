@charset "UTF-8";
/* 공통 */
.main-cont{
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
    background-color: #fff;
    border-radius: 10px;
    padding: var(--pd--m);
    display: flex;
    gap: var(--gap--m);
}
.frow{
	display: flex;
	flex-direction: row;
	gap:var(--gap--m);
}
.spbt{
	justify-content: space-between;
}
.spar{
	justify-content: space-around;
}
.fcol{
	display: flex;
	flex-direction: column;
	gap:var(--gap--m);
}
.back-red{
	background: linear-gradient(180deg, var(--red--1), var(--red--3));
}

/* info */
.main-info-title{
	color:var(--blue--0);
    font-size: 1.3rem;
    font-weight: 900;
}
.main-info-cont{
	display: flex;
	flex-direction: column;
	gap:var(--gap--s);
    align-items: center;
}
.info-wrap{
	border-radius: 10px;
    padding: var(--pd--s);
    gap:var(--gap--s);
    display: flex;
	width: -webkit-fill-available;
    justify-content: space-between;
    cursor: pointer;
}
.info-wrap:hover{
	background: linear-gradient(white, var(--green--1));
    box-shadow: 0px 8px 20px rgba(100, 100, 110, 0.09);
}

.info-title{
    font-weight: 400;
    display: flex;
    gap:2px;
	font-size: 1rem;
	color: var(--green--8);
}
.info-title .material-symbols-outlined{
	color:var(--gray--8);
	font-size: 0.7rem;
}

.info-cont{
	color:var(--green--9);
	font-size: 1.5rem;
    font-weight: 800;
    display: flex;
    justify-content: end;
}

.main-info{
	background: linear-gradient(180deg, var(--green--3), var(--green--5));
	gap:var(--gap--l);
}


/* amt 시작*/  
.amt-wrap{
	display: flex;
	gap: var(--gap--m);
	flex-direction: row;
}
.amt-col{
	display:flex;
	flex-direction:column;
	gap: var(--gap--m);
}
.amt-cont{
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
    background-color: #fff;
    border-radius: 10px;
    overflow: hidden;
    padding: var(--pd--m);
    
    width: -webkit-fill-available;
    
    gap: var(--gap--s);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.amt-title{
	font-size: large;
    font-weight: 400;
    color: var(--gray--5);
}
.amt-cont-dtl{
	display: flex;
    flex-direction: column;
    gap: var(--gap--s);
}
.amt-dtl{
	display: flex;
	flex-direction: row;
	gap:var(--gap--s);
	align-items: end;
    justify-content: right;
}
.amt-amt{
	font-size: x-large;
	font-weight: 700;
}
.amt-icon{
	display: flex;
    align-items: center;
}
.icon-amt{
	font-size:50px;
	color:var(--gray--4);
}
/* amt 끝*/  


/* sls 시작*/  
.cont-title{
    display: flex;
    justify-content: space-between;
}
.sls-wrap{
    display: flex;
    gap: var(--gap--l);
}
.sls-cont{
	display: flex;
	gap:var(--gap--s);
    align-items: center;
    width: 230px;
}
.sls-icon{
	display: flex;
	justify-content: center;
    align-items: center;
    background: var(--green--4);
    width: 40px;
    height: 40px;
    padding: var(--pd--s);
    border-radius: 20%;
}
.sls-icon .material-symbols-outlined{
	color: var(--blue--0);
}
.sls-dtl{
    display: flex;
    flex-direction: column;
    gap: var(--gap--s);
    width: -webkit-fill-available;
}
.sls-title{
	color: var(--gray--6);
}
.sls-cn{
    font-size: 1.3rem;
    font-weight: 700;
    display: flex;
}
.radio{
	display: flex;
    justify-content: end;
}
/*메뉴 구분 선택*/
.form_radio_btn {
	width: 100px;
	height : 45px;
	border: 1px solid #EAE7E7;
	border-radius: 10px;
}
.form_radio_btn input[type=radio] {
	display: none;
}
.form_radio_btn label {
	display: block;
	border-radius: 10px;
	margin: 0 auto;
	text-align: center;
	height: -webkit-fill-available;
	line-height: 45px;
}
/* Checked */
.form_radio_btn input[type=radio]:checked + label {
	background: var(--green--4);
	color: #fff;
}
 
/* Hover */
.form_radio_btn label:hover {
	color: #666;
}
 
/* Disabled */
.form_radio_btn input[type=radio] + label {
	background: #F9FAFC;
	color: #666;
}
.sls-chart .ordr-chart{
	flex-grow: 1;
    height: 370px;     /* 고정된 높이 */
    position: relative;  /* 자식 요소 위치 제어 */
    top: 15px;
}

.sls-chart .ordr-chart > canvas {
	width: 100% !important;   /* 부모의 너비를 따름 */
    height: 100% !important;  /* 부모의 높이를 따름 */
    display: block;            /* 불필요한 스크롤 방지 */
}

/* sls 끝*/  



/* cnt 시작 */
.scm-wrap{
	display: flex;
	gap: var(--gap--m);
	flex-direction: row;
}
.scm-wrap2{
	display: flex;
	gap: var(--gap--m);
	flex-direction: row;
	position: relative;
    bottom: 20px;
}
.scm-cont{
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
    background: linear-gradient(180deg, var(--yellow--2), var(--yellow--3));
    border-radius: 10px;
    overflow: hidden;
    padding: var(--pd--m);
    
    gap: var(--gap--s);
    display: flex;
    flex-direction: row;
