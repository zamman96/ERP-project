    justify-content: space-between;
    cursor: pointer;
}
.scm-cont:hover{
	background: linear-gradient(180deg, var(--yellow--3), var(--yellow--4));
}
.scm-cont2{
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
    background: linear-gradient(180deg, #6fff90, #28a745);
    border-radius: 10px;
    overflow: hidden;
    padding: var(--pd--m);
    
    gap: var(--gap--s);
    display: flex;
    flex-direction: row;
    width: 170px;    /* 크기 */
    justify-content: space-between;
    cursor: pointer;
}
.scm-cont2:hover{
