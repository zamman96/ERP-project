@charset "UTF-8";


.join-wrap {
	background-color: var(--bg--blue);
    height: 100%;
}

.join-inner {
    width: 650px;
    margin: auto;
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0px 5px 14px rgba(127, 138, 140, 0.09);
}

.table-join tr th {
	font-weight: 600;
    color: var(--gray--8);
	width: 140px;
    line-height: 70px;
}

.btn-border {
    height: 44px;
    background: white;
    border: 1px solid var(--brand--primary);
    color: var(--brand--primary);
}

.table-join {
	width: 100%;
}

.td-flex {
	display: flex;
    gap: 10px;
}

.text-input {
	width: 75%;
}

.td-flex .btn-border {
	width: 23%;
}

.radio-wrap {
    display: flex;
    gap: 10px;
}

.radio-cont {
    display: flex;
    gap: 4px;
}

label {
	font-weight: 400 !important;
}

.error-message {
	margin: 10px 0;
}

.btn-wrap {
    text-align: center;
    margin-top: 40px;
}

.btn-submit {
	padding: 20px 90px;
    font-size: 1.2rem;
    font-weight: 600;
    border-radius: 12px;
    background: #4FD66E;
    color: white;
}

.input-tel {
	width: 101px;
}

.error-message {
    color: red;
    display: block;
    font-size: 15px; /* 오류 메시지가 잘 보이도록 작은 폰트로 설정 */
}

.input-addr {
    width: 99%;
}
























