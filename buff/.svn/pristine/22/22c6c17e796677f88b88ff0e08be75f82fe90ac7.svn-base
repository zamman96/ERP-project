@charset "UTF-8";

.eventDtl-title {
    position: relative;
    margin: 50px 0 20px 0;
  	text-align: center;
}
.icon-backspace {
    position: absolute;
	font-size: 2rem;
	left: 0;
	cursor: pointer;
    font-variation-settings: 'FILL' 0, 'wght' 300, 'GRAD' 0, 'opsz' 20;
}
.event-nm {
    font-size: 1.75rem;
    font-weight: bold;
    color: #333;
}
.event-date {
	margin: 15px 0 50px 0;
}

/* 이벤트 내용 */
.eventDtl-content {
    width: 890px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 30px;
}
.content-cont {
	font-size: 1.2rem;	
}
/* 더보기 */
.view-more {
    width: 100%;
    margin: 50px 0;
}
.more-btn {
    display: flex;
    align-items: center;
    cursor: pointer;
    border: 1px solid var(--gray--7);
    width: fit-content;
    margin: auto;
    padding: 12px 30px 12px 18px;
    border-radius: 50px;
}

/* 쿠폰영역 */
.coupon-cont {
    background: whitesmoke;
    padding: 50px;	
    border-radius: 12px;
    display: flex;
    height: 400px;
}
.coupon-box {
    background: var(--brand--bg);
}
.coupon-box.block,
.coupon-box.dashed {
	width: 100px;
}
.coupon-box.block {
    border-top: 1px solid var(--brand--primary);
    border-bottom: 1px solid var(--brand--primary);
}
.coupon-box.block.left {
    border-left: 1px solid var(--brand--primary);
}
.coupon-box.block.right {
    border-right: 1px solid var(--brand--primary);
}
.coupon-box.dashed {
    position: relative;
    display: flex;
    justify-content: center;
}
.circle-top {
    background: whitesmoke;
    width: 66px;
    height: 30px;
    border-radius: 0 0 50px 50px;
    position: absolute;
    top: 0;
    border: 1px solid var(--brand--primary);
    border-top: whitesmoke;
}
.circle-bom {
    background: whitesmoke;
    width: 66px;
    height: 30px;
    border-radius: 50px 50px 0 0;
    position: absolute;
    bottom: 0;
    border: 1px solid var(--brand--primary);
    border-bottom: whitesmoke;
}
.border-dot {
    border: 4px dashed whitesmoke;
}
.coupon-box.center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: -webkit-fill-available;
    border-top: 1px solid var(--brand--primary);
    border-bottom: 1px solid var(--brand--primary);
	gap: 15px;
}
.coupon-nm {
    font-size: 1.8rem;
    color: var(--brand--primary);
    font-family: 'KIMM';
}
.coupon-price {
    font-size: 5rem;
    font-weight: 900;
    color: var(--brand--primary);
    font-family: 'KIMM';
}
.coupon-btn-wrap {
	height: 60px;
}
.coupon-btn {
	display: flex;
    background: orange;
    color: white;
    padding: 20px 60px;
    border-radius: 10px;
    font-size: 1.2rem;
    font-weight: 900;
    cursor: pointer;
  	animation: move 0.7s ease-in 0s infinite alternate; 
 	margin-top: 0;
}
.coupon-btn span {
	color: white;
    font-variation-settings: 'FILL' 0, 'wght' 500, 'GRAD' 0, 'opsz' 20;
}
        
@keyframes move {
	0% {margin-top: 0px;}
	100% {margin-top: 3px;}
}

























