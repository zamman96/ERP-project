/* 추가기능 */
.sound_only{display: none;}


.it_option{
	appearance: auto !important;
	min-width: 150px;
    width: 30%;
    padding: 5px 10px;
    border: 1px solid #dfdfdf;
    border-radius: 5px;
	margin-left:20px;
}

.sit_option h3{
	float: left;
	margin-right: 0 !important;
	line-height:38px;
	color: #333;
    font-size: 0.875rem;
	font-weight: 500;
}

.sit_opt_list{
	margin-top:10px;	
}
.sit_opt_list .num p{
	margin-right: 0 !important;
}
.sit_opt_list .num .amount{
	margin-left : 20px;
}

