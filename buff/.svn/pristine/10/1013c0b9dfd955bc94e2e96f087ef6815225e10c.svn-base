@charset "UTF-8";

.menu-tap {
    margin-bottom: 70px;
    display: flex;
    width: 100%;
    gap: 30px;
    justify-content: center;
}
.tap-select {
	cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: center;
}
.tap-icon {
    display: block;
    width: 70px;
    height: 70px;
    border-radius: 30px;
    border: 1px solid var(--gray--2);
    background: var(--gray--1);
    text-align: center;
    line-height: 90px;
}
.tap-icon span {
    font-size: 2rem !important;
    color: var(--gray--5);
}
.tap-nm {
    color: var(--gray--5);
    font-size: 1.1rem;
    font-weight: 500;
}
.tap-select.active .tap-icon {
    border: 2px solid var(--brand--primary);
    background: var(--brand--bg);
}
.tap-select.active .tap-icon span {
	color: var(--brand--primary);
	font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 20;
}
.tap-select.active .tap-nm {
	color: var(--brand--primary);
	font-weight: 900;
}


.dtl-wrap {
	display: flex;
	justify-content: space-between;
	gap: var(--gap--l);
}
.dtl-inner.frcs {
	display: flex;
    flex-direction: column;
	gap: 20px;
}
.menu-list {
	width: 100%;
    background: white;
    border-radius: 12px;
}
.list-box {
    display: flex;
    flex-wrap: wrap;
    gap: 54px;
}
.list-box li {
    width: -webkit-fill-available;
    cursor: pointer;
}
.img-box {
    overflow: hidden;
    border-radius: 12px;
    background-color: #f7f7f7;
}
.img-box span {
    display: block;
    height: 270px;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100%;
    transition: 0.5s;
    border-radius: 20px;
    transition: 0.5s;
}
.img-box span:hover {
	background-size: 105%;
    transition: 0.5s;
}
.list-title {
    color: var(--gray--9);
    font-weight: bold;
    font-size: 1.5rem;
    margin-top: 20px;
}
.list-txt {
    margin-top: 10px;
    color: var(--gray--6);
}

/* 더보기 */
.view-more {
    width: 100%;
    margin: 50px 0;
}
.more-btn {
    display: flex;
    align-items: center;
    cursor: pointer;
    border: 1px solid var(--gray--7);
    width: fit-content;
    margin: auto;
    padding: 12px 30px 12px 18px;
    border-radius: 50px;
}




































