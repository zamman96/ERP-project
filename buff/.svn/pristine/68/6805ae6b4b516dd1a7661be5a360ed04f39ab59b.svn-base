@charset "UTF-8";

.order-wrap {
	background-color: var(--bg--blue);
	min-height: 1200px;
	height: 100%;
}
.order-tap {
    margin-bottom: 30px;
    display: flex;
    width: 100%;
    gap: var(--gap--s);
}
.tap-select {
	display: block;
    text-align: center;
    background-color: #fff;
    border: 1px solid #DDE6E6;
    border-radius: 10px 10px 0 0;
    color: #555;
    font-size: 1.125rem;
    font-weight: 500;
    line-height: 62px;
    width: -webkit-fill-available;
    cursor: pointer;
    user-select: none;
}
.tap-select.active {
    color: #fff;
    border-color: var(--brand--primary);
    background-color: var(--brand--primary);
    font-weight: bold;
}
.tap-select.active span{
    color: #fff;
    font-weight: bold;
}
.dtl-wrap {
	display: flex;
	justify-content: space-between;
	gap: var(--gap--l);
}
.dtl-cont.rigth {
	width: 100%;	
}

/* 주문 오른쪽 영역 ------------------------------------- */
.dtl-cont.right {
	/* height: 100px */
}
.dtl-right {
    position: sticky;
    top: 100px;
}
.chk-inner {
	width: 300px;
	background-color: #fff;
    box-shadow: 0px 5px 14px rgba(127, 138, 140, 0.09);
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 20px;
    padding: 20px 0 0 0;
    border: 1px solid var(--gray--1);
}
.chk-title {
	padding: 0 20px;
	font-weight: bold;
	font-size: 1.1rem;
}
.chk-wrap.top {
	display: flex;
    flex-direction: column;
    gap: var(--gap--m);
    padding: 25px 0;
    border-top: 1px solid var(--gray--1);
    border-bottom: 1px solid var(--gray--11);
    margin-top: var(--pd--m);
}
.chk-cont {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 20px;
}
.chk-cont .left {
    font-weight: bold;
    display: flex;
    align-items: end;
    gap: 4px;
}
.chk-coupon {
    padding: 0 20px;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    margin-top: -10px;
    margin-bottom: 10px;
    justify-content: end;
}
.chk-wrap.bom .chk-cont {
    padding: var(--pd--l) var(--pd--m);
	background: #F8FDF9;
}
.chk-wrap.bom .chk-cont .rigth {
	font-weight: bold;
}
.chk-wrap.bom .chk-cont .left {
	font-weight: bold;
	font-size: 1.3rem;
	color: var(--brand--primary);
}
#couponModal {
	color: var(--brand--primary);
	border: 1px solid var(--brand--primary);
	background: white;
    font-weight: bold;
}
#orderBtn {
	background-color: #4FD66E;
    color: #fff;
    border: 1px solid #4FD66E;
    display: block;
    width: 100%;
    line-height: 35px;
    font-weight: 700;
    border-radius: 10px;
    text-align: center;
    font-size: 1.2rem;
}


/* 주문 왼쪽 영역 -------------------------------*/
/* 가맹점 선택 영역 */
.dtl-inner.frcs {
	display: flex;
    flex-direction: column;
	gap: 20px;
}
.frcs-menu {
	width: 100%;
    border: 1px solid var(--gray--1);
    background: white;
    padding: var(--pd--m);
    border-radius: 12px;
}
.select-wrap {
	display: flex;
	gap: var(--gap--s);
}
.select2-container {
    width: fit-content !important;
}
.select2-container--default .select2-selection--single .select2-selection__rendered {
    line-height: 22px;
}
.select2-selection[aria-labelledby="select2-rgnNo-container"] { 
	width: 200px !important
}
.select2-selection[aria-labelledby="select2-rgnNo-container"] .select2-dropdown {
	width: 200px !important
}
.select2-selection[aria-labelledby="select2-frcsNo-container"] { 
	width: 300px !important;
}
.select2-selection[aria-labelledby="select2-frcsNo-container"] .select2-dropdown {
	width: 300px !important;
}

/* 메뉴 박스 */
.list-box {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}
.list-box li {
    width: 230px;
    margin-left: 22px;
}
.img-box {
    overflow: hidden;
    border-radius: 12px;
    background-color: #f7f7f7;
}
.frcs-menu .list-box .img-box span {
    display: block;
    width: 100%;
    height: 200px;
    background-repeat: no-repeat;
    background-position: center;
	background-size: 120%;
    transition: 0.5s;
}
.frcs-menu .list-box .img-box span:hover {
	background-size: 130%;
    transition: 0.5s;
}
.list-box .img-box .list-badge p {
    position: relative;
    color: #999;
    font-size: 0.875rem;
    display: inline;
}
.list-menuNm {
	margin-top: 15px;
}
.list-txt {
	color: #333;
    font-weight: 500;
    line-height: 1.44em;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
	margin-top: 12px;
}
.list-price {
    margin-top: 10px;
    color: #333;
    font-family: 'Poppins';
    font-weight: 600;
    display: flex;
    align-items: center;
    font-size: 1.2rem;
}
.preservation {
    margin-top: 15px;
}
.bar {
    height: 2px;
    background-color: #E8E9EC;
    margin-bottom: 10px;
}
.list-input {
	display: flex;
	gap: var(--gap--s);
}
.cart-qty {
    border: 1px solid var(--gray--2);
    display: flex;
    height: -webkit-fill-available;
    border-radius: 4px;
    gap: 1px;
}
.list-input .minus-qty,
.list-input .num,
.list-input .plus-qty {
	border: none;
}
.list-input .num {
    border: none;
    width: 55px;
    text-align: center;	
}
.menu-add {
    background: var(--gray--0);
    border: 1px solid var(--gray--2);
}
.menu-add:hover {
    background: #F8FDF9;
    border: 1px solid var(--brand--primary);
    color: var(--brand--primary);
}

/* 장바구니 영역 */
.dtl-cont.left {
	width: 100%;
}
.dtl-inner.cart{
	display: flex;
    flex-direction: column;
	gap: 15px;
}
.cart-top {
	display: flex;
	justify-content: space-between;
    margin-top: 15px;
}
.cart-title {
    font-size: 1.2rem;
    font-weight: bold;
}
.cart-controll {
	display: flex;
	gap: var(--gap--s);
}
.cart-wrap {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-radius: 12px;
    overflow: hidden;
}
.cart-cont {
	display: flex;
    align-items: center;
    padding: 20px 30px;
    justify-content: space-between;
    border-bottom: 1px solid var(--gray--1);
}
.menu-info, .menu-price {
	display: flex;
	gap: 20px;
	align-items: center;
}
.menu-img {
	height: 100px;
}
.menu-price {
	font-size: 1.1rem;
	font-weight: bold;
}
#allChk, #cartDelete, #menuDelete {
	cursor: pointer;
}
.error-info {
    text-align: center;
    padding: var(--pd--l) 0 40px 0 !important;
}
.error-info .icon {
    font-size: 5rem !important;
    font-variation-settings: 'FILL' 0, 'wght' 100, 'GRAD' 0, 'opsz' 24;
}
.error-msg {
    padding-top: var(--pd--s);
    font-size: 1.2rem;
    color: var(--text--9);
}



/* 쿠폰 시작 --------------------------------------------------------------------  */
.couponCard{
	-webkit-mask-image: radial-gradient(circle at right 56px bottom 13px, transparent 13px, red 13.5px), radial-gradient(closest-side circle at 50%, red 99%, transparent 100%);
	-webkit-mask-size: 100%, 6px 17px;
	-webkit-mask-repeat: repeat, repeat-y;
	-webkit-mask-position: 0 13px, calc(100% - 53px);
	-webkit-mask-composite: source-out;

	width: 400px;
    height: 250px;
    margin: 2rem auto;
    border-radius: .5rem;
    background-size: 300% 100%;
    background-image: linear-gradient(to right, #25aae1, #40e495, #30dd8a, #2bb673);
/*     background: var(--green--2); */
    
    --theme: hsl(0,50%,50%);
    -webkit-font-smoothing: antialiased;
    color: #2c3e50;
    padding: var(--gap--xl);
    
    display: flex;
    flex-direction: column;
    gap: var(--gap--l);
}
.coupon-disabled{
	background: var(--gray--2);
}
.coupon-disabled div{
	color : var(--gray--5);
}
.card-con{
	position: relative; /* 부모 요소에 relative 설정 */
	flex: 1;
    filter: drop-shadow(.5rem .5rem 0rem #F3F4F5);
}
/* 쿠폰 이름 */
.cp-title{
	font-size: var(--page--title--size);
    font-weight: var(--page--title--weight);
    color: var(--gray--0);
}
/* 쿠폰 내용 */
.cp-cont{
	display:flex;
	flex-direction: column;
	gap : var(--gap--s);	
}
/* 쿠폰 메뉴 */
.cp-menu{
    font-size: var(--container--title--size);
    font-weight: var(--container--title--weight);
    color: var(--gray--0);
}
/* 쿠폰 가격  */
.cp-amt{
    color: var(--yellow--3);
    font-size: 2.0rem;
    font-weight: 900;
	
}
/* 쿠폰 기간  */
.cp-date{
    font-size: var(--secondary--size);
    font-weight: var(--secondary--weight);
    color: var(--gray--05);
}
.coupon-active:hover{
	transform: scale(1.05); /* 조금 덜 확대되도록 변경 */
	transition: transform 0.5s ease-in-out; /* 확대 효과를 더 자연스럽게 변경 */
    background-position: 100% 0;
    moz-transition: all .4s ease-in-out;
    -o-transition: all .4s ease-in-out;
    -webkit-transition: all .4s ease-in-out;
    transition: all .4s ease-in-out;
}
/* 쿠폰 끝 --------------------------------------------------------------------  */


.modal-body{
	max-height: 700px;
	overflow-y: scroll;
}

.menu-delete{
	cursor: pointer;
}


/* 모달 */

.modal-header{
	background: var(--blue--0);
	padding: var(--pd--s) var(--pd--m) !important;
}
.modal-title{
	color:var(--blue--8);
}
.btn-icon{
	background: none;
	padding : 1px !important;
}
.icon-btn{
	font-size:1.5rem;
  font-variation-settings:
		  'FILL' 0,
		  'wght' 300,
		  'GRAD' 0,
		  'opsz' 40
}




























