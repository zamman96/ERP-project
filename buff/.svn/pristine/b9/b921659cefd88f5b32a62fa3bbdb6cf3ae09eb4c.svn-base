/* 점검 내역 테이블에 스크롤 추가 */
#storeCheck {
  display: block; /* 테이블을 블록으로 설정하여 스크롤 가능 */
  max-height: 345px; /* 스크롤 높이 제한 */
  overflow-y: auto; /* 세로 스크롤 활성화 */
}

#storeCheck tr {
  display: table; /* 테이블 레이아웃 유지 */
  width: 100%; /* 테이블 너비 */
  table-layout: fixed; /* 테이블 레이아웃 고정 */
}