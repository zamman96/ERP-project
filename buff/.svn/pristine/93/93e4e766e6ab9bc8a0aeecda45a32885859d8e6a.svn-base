    position: relative;
    box-sizing: border-box;
    line-height: 100px;
    font-size: 3rem;
    font-weight: 900
}

.circle-default {
   border-color: var(--bge--default);
}
.circle-active {
   border-color: var(--bge--active);
}
.circle-danger {
   border-color: var(--bge--danger);
}
.circle-warning {
   border-color: var(--bge--warning);
}
.circle-info {
   border-color: var(--bge--info);
}

.circle-title{
   position: absolute;
   font-size: 1rem;
   bottom: -8px;
}

/* 진행 중인 이벤트 테이블에 스크롤을 tbody 부분에만 추가 */
.eventCheck-table {
    table-layout: fixed; /* 테이블 레이아웃 고정 */
    width: 100%; /* 테이블 너비 */
}

.eventCheck-table tbody {
    display: block; /* 블록으로 설정하여 스크롤 가능 */
    max-height: 140px; /* 원하는 높이로 제한 */
    overflow-y: auto; /* 세로 스크롤 활성화 */
}

.eventCheck-table thead, 
.eventCheck-table tbody tr {
    display: table; /* 테이블 레이아웃 유지 */
    width: 100%; /* 테이블 너비 */
    table-layout: fixed; /* 레이아웃 고정 */
}

/* 가맹점 점검 내역 테이블에 스크롤을 tbody 부분에만 추가 */
.storeCheck-table {
    table-layout: fixed; /* 테이블 레이아웃 고정 */
    width: 100%; /* 테이블 너비 */
}

.storeCheck-table tbody {
