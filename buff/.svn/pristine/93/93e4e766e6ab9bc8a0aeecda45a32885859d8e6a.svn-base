}

/* 점검 내역의 총점수가 60미만이면 빨간글씨로 출력되는 CSS이다 */
.storeCheck-table tbody tr td.red-text {
    color: red;
    font-weight: bold;
}
.ordr-chart {
	height: 300px;
}

canvas {
    width: 100% !important; /* 부모 요소에 맞게 */
    height: 100% !important; /* 부모 요소에 맞게 */
}

/* 알림 */
.alarm-wrap{
	display: flex;
	flex-direction: column;
	gap:var(--gap--m);
	background: white;
	padding: var(--pd--m);
    border-radius: var(--radius--l);
    height: -webkit-fill-available;
}
.alarm-wrap .alarm-cont:hover{
	color: var(--green--4);
	cursor: pointer;
}
.alarm-wrap .alarm-cont:before {
  content: '';
  border-bottom: solid 1px var(--green--4);
  position: absolute;
  bottom: 0; left: 0;
  width: 100%;
  
  opacity: 0;
}

.alarm-cont{
	display: flex; 
	gap: var(--gap--s);
}
.alarm-wrap .alarm-cont:hover:before {
  opacity: 1.0;
}

.alarm-wrap .alarm-cont, .alarm-wrap .alarm-cont:before {
  -webkit-transition: all 0.2s ease;
          transition: all 0.2s ease;
}
.alarm-warning{
	color:var(--red--4);
}
.main-alarm-cont{
	background: linear-gradient(180deg, var(--blue--7), var(--blue--8));
}
.clsbiz{
	font-weight: bold;
}
.check{
	color: var(--gray--6);
	text-decoration: line-through;
}
.blank .chk-box{
	background-image: url('/resources/images/blank_box.png'); /* 아이콘 이미지 경로 */
    background-size: contain; /* 이미지 크기를 요소에 맞게 조정 */
    background-repeat: no-repeat; /* 이미지 반복 방지 */
    width: 16px; /* 적절한 너비 설정 */
    height: 16px; /* 적절한 높이 설정 */
    display: inline-block; /* 인라인 블록으로 설정 */
}
.check .chk-box, .check_box{
	background-image: url('/resources/images/check_box.png'); /* 아이콘 이미지 경로 */
    background-size: contain; /* 이미지 크기를 요소에 맞게 조정 */
    background-repeat: no-repeat; /* 이미지 반복 방지 */
    width: 16px; /* 적절한 너비 설정 */
    height: 16px; /* 적절한 높이 설정 */
    display: inline-block; /* 인라인 블록으로 설정 */
}
.modal-body {
    background-color: var(--blue--05); 
}